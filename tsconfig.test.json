{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": ["jest", "node"]
  },
  "include": [
    "tests/**/*",
    "src/**/*"
  ]
}
