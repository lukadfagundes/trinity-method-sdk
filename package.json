{
  "name": "trinity-method-sdk",
  "version": "1.0.0",
  "description": "Trinity Method SDK - Investigation-first development methodology for any project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "!dist/**/*.map",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "bin": {
    "trinity": "./dist/cli/index.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "node -e \"const fs=require('fs-extra'); fs.copySync('src/templates', 'dist/templates');\"",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:performance": "jest --selectProjects performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "type-check": "tsc --noEmit",
    "docs:generate": "typedoc --out docs src/",
    "pretest": "npm run type-check",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "trinity-method",
    "development-methodology",
    "investigation-first",
    "ai-coding",
    "claude-code",
    "cursor",
    "copilot"
  ],
  "author": "Trinity Method",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.0",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chokidar": "^4.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "jest": "^29.0.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.3",
    "inquirer": "^9.2.0",
    "lru-cache": "^11.2.2",
    "ora": "^7.0.1",
    "uuid": "^10.0.0"
  }
}
